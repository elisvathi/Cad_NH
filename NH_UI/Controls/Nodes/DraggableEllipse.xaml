<UserControl x:Class="NH_UI.Controls.Nodes.DraggableEllipse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NH_UI.Controls.Nodes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Ellipse Stroke="Black" Fill="White" StrokeThickness="3" DragDrop.Drop="Ellipse_Drop" AllowDrop="True" DragEnter="Ellipse_DragEnter" MouseLeftButtonDown="Ellipse_MouseDown" MouseUp="Ellipse_MouseUp" x:Name="shape"></Ellipse>
    </Grid>
</UserControl>
